<Window x:Class="CoCWinDesktop.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CoCWinDesktop"
		xmlns:Views="clr-namespace:CoCWinDesktop.Views"
		xmlns:MV="clr-namespace:CoCWinDesktop.ModelView"
		FocusVisualStyle="{x:Null}"
		Title="Corruption of Champions" Height="839" Width="1016">
	<Window.Background>
		<SolidColorBrush Color="Black"/>
	</Window.Background>
	<Window.Resources>

		<Style TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="White"/><!-- Here for debug purposes: default context controller uses text block. this will let us see that it's working-->
		</Style>
		<DataTemplate DataType="{x:Type MV:MainMenuModelView}">
			<Views:MainMenuView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type MV:StandardModelView}">
			<Views:StandardView/>
		</DataTemplate>
		<DataTemplate x:Key="CombatTemplate" DataType="{x:Type  MV:CombatModelView}">
			<Views:CombatView/>
		</DataTemplate>
	</Window.Resources>
	<!--Content-->
	<Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" StretchDirection="Both">
		<ContentControl DataContext="{StaticResource Runner}" FocusVisualStyle="{x:Null}" Content="{Binding Path=ModelView, Mode=OneWay}"/>
	</Viewbox>
	<!--End Content-->
</Window>
