<UserControl x:Class="CoCWinDesktop.CustomControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CoCWinDesktop.CustomControls"
			 xmlns:SBV="clr-namespace:CoCWinDesktop.CustomControls.SideBarViews"
			 xmlns:SBMV="clr-namespace:CoCWinDesktop.CustomControls.SideBarModelViews"
			 Name="_this"
			 Height="595" Width="200">
	<UserControl.Background>
		<ImageBrush ImageSource="{Binding SidebarBackgroundImage, Mode=OneWay, Source={StaticResource Runner}, TargetNullValue={x:Null}}" />
	</UserControl.Background>
	<UserControl.Resources>
		<DataTemplate DataType="{x:Type SBMV:StandardSideBarModelView}">
			<SBV:StandardSideBarView/>
		</DataTemplate>
	</UserControl.Resources>
	<ContentControl FocusVisualStyle="{x:Null}" Content="{Binding SideBarObject, ElementName=_this, Mode=OneWay}"/>
</UserControl>
