<UserControl x:Class="CoCWinDesktop.Views.StandardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:CoCWinDesktop.Views"
			 xmlns:MV="clr-namespace:CoCWinDesktop.ModelView"
			 xmlns:CC="clr-namespace:CoCWinDesktop.CustomControls"
			 xmlns:Conv="clr-namespace:CoCWinDesktop.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 d:DataContext="{d:DesignInstance Type=MV:StandardModelView}"
			 Style="{StaticResource PageControl}"
			 Name="_this">
	<!--xmlns:Behave="clr-namespace:CoCWinDesktop.Behaviors"
			 Behave:FocusBehavior.FocusFirst="True"-->
	<UserControl.Resources>
		<Conv:DrawingColorToMediaColorIgnoreAlpha x:Key="ColorConverter" />
		<Conv:VisibilityFromIsNull x:Key="NullToVis"/>
		<Conv:VisibilityFromBool x:Key="BoolToVis"/>
		
		<Style TargetType="{x:Type Button}" BasedOn="{StaticResource CoCButton}"/>
	</UserControl.Resources>
	<!--<UserControl.CommandBindings>
		<CommandBinding Command="{x:Static local:StandardView.TestCommand}"
                    Executed="ExecuteWrappedCommand"
                    CanExecute="CanExecuteCustomCommand" />
	</UserControl.CommandBindings>
	<UserControl.InputBindings>
		<KeyBinding Key="D1" Command="{x:Static local:StandardView.TestCommand}"/>
		<KeyBinding Key="D2" Command="{Binding BottomButtons[1].ClickCommand, Mode=OneWay}"/>
		<KeyBinding Key="D3" Command="{Binding Path=BottomButtons[2].ClickCommand, Mode=OneTime}"/>
	</UserControl.InputBindings>-->
	<Canvas Style="{StaticResource CoCCanvas}">
		<Grid Name="TopRowButtons" Width="982" Canvas.Left="0" Height="50" Visibility="{Binding Path=showTopRow, Converter={StaticResource BoolToVis}, Mode=OneWay}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Name="MainMenuBtn" Grid.Column="0" Content="Main Menu" Background="{StaticResource Button0Image}" Command="{Binding Path=GoToMainMenu, Mode=OneTime}"/>
			<Button Name="DataBtn" Grid.Column="1" Content="Data" Background="{StaticResource Button1Image}" Command="{Binding Path=GoToDataScreen, Mode=OneTime}"/>
			<Button Name="StatsBtn" Grid.Column="2" Content="Stats" Background="{StaticResource Button2Image}" Command="{Binding Path=DoStats, Mode=OneTime}"/>
			<Button Name="LevelUpBtn" Grid.Column="3" Content="{Binding Path=LevelUpText, FallbackValue='Level Up'}" Background="{StaticResource Button3Image}"
				Command="{Binding Path=DoLeveling, Mode=OneTime}"/>
			<Button Name="PerksBtn" Grid.Column="4" Content="Perks" Background="{StaticResource Button4Image}" Command="{Binding Path=DoPerks, Mode=OneTime}"/>
			<Button Name="AppearanceBtn" Grid.Column="5" Content="Appearance" Background="{StaticResource Button5Image}" Command="{Binding Path=DoAppearance, Mode=OneTime}"/>

		</Grid>
		<!-- This will show up as SideBarObject in code - i had to remove it to make prison work in a sane fashion - i could have made it all use the same code but that was ugly-->
		<!-- So instead, it's a custom control with a content control as its base. Naturally that means the designer has no idea what it'll look like until run time. -->
		<CC:SideBar Canvas.Top="50" SideBarObject="{Binding Path=sideBar, Mode=OneWay}" Visibility="{Binding Path=ShowSidebar, Converter={StaticResource BoolToVis}, Mode=OneWay}"/>
		<Canvas Name="CreditText" Canvas.Left="4" Canvas.Top="654" Height="58" Width="200" Visibility="{Binding Path=authorText, Mode=OneWay, Converter={StaticResource NullToVis}}">
			<TextBlock Name="SceneBy" Style="{StaticResource CoCText}" Canvas.Top="0" Canvas.Left="0" FontSize="20" FontWeight="Bold" FontFamily="Georgia" Text="Scene By:"/>
			<TextBlock Style="{StaticResource CoCText}" Canvas.Top="24" Canvas.Left="0" FontSize="16" FontFamily="Arial" Text="{Binding Path=authorText, Mode=OneWay}"/>
		</Canvas>
		<Image Canvas.Left="4" Canvas.Bottom="4" Height="80" Width="80" StretchDirection="Both" Stretch="Uniform" Source="{Binding Path=sprite, Mode=OneWay, TargetNullValue={x:Null}}"/>
		<CC:TextView x:Name="MainContent" Style="{StaticResource SimpleTextZone}"
				Background="{Binding TextBackground, Mode=OneWay, Source={StaticResource Runner}}"
				MainText="{Binding Path=output, Mode=OneWay}" 
				MainImage="{Binding Path=bitmap, Mode=OneWay}"
				PostControlText="{Binding Path=postControlText, Mode=OneWay}"
				InputFieldVisible="{Binding Path=InputInUse, Mode=OneWay}"
				InputCalculatedWidth="{Binding Path=InputWidth, Mode=OneWay}"
				InputFieldMaxLength="{Binding Path=InputMaxLen, Mode=OneWay}"
				LimitCharactersRegex="{Binding Path=InputCharRegex, Mode=OneWay}"
				InputFieldText="{Binding Path=InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				DropdownVisible="{Binding Path=DropdownInUse, Mode=OneWay}"
				DropdownContainer="{Binding Path=DropdownWrapper, Mode=OneWay}" />
		<Grid Canvas.Left="208" Canvas.Bottom="0" Width="769" Height="132">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Button Name="BottomButton0" Grid.Column="0" Grid.Row="0" IsTabStop="True" TabIndex="10" Background="{StaticResource Button0Image}"
					Visibility ="{Binding Path=BottomButtons[0].visibility}"
					Content="{Binding Path=BottomButtons[0].Title, FallbackValue='Button 0'}"
					Command="{Binding Path=BottomButtons[0].ClickCommand, Mode=OneTime}"
					IsDefault="True">
				<!--IsDefault="{Binding Path=BottomButtons[0].isDefault, FallbackValue = false}">-->
			</Button>
			<Button Name="BottomButton1" Grid.Column="1" Grid.Row="0" IsTabStop="True" TabIndex="11"  Background="{StaticResource Button1Image}"
					Visibility ="{Binding Path=BottomButtons[1].visibility}"
					Content="{Binding Path=BottomButtons[1].Title, FallbackValue='Button 1'}"
					Command="{Binding Path=BottomButtons[1].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[1].isDefault, FallbackValue = false}">-->
			</Button>
			<Button Name="BottomButton2" Grid.Column="2" Grid.Row="0" IsTabStop="True" TabIndex="12" Background="{StaticResource Button2Image}"
					Visibility ="{Binding Path=BottomButtons[2].visibility}"
					Content="{Binding Path=BottomButtons[2].Title, FallbackValue='Button 2'}"
					Command="{Binding Path=BottomButtons[2].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[2].isDefault, FallbackValue = false}">-->
				
			</Button>
			<Button Name="BottomButton3" Grid.Column="3" Grid.Row="0" IsTabStop="True" TabIndex="13" Background="{StaticResource Button3Image}"
					Visibility ="{Binding Path=BottomButtons[3].visibility}"
					Content="{Binding Path=BottomButtons[3].Title, FallbackValue='Button 3'}"
					Command="{Binding Path=BottomButtons[3].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[3].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton4" Grid.Column="4" Grid.Row="0" IsTabStop="True" TabIndex="14" Background="{StaticResource Button4Image}"
					Visibility ="{Binding Path=BottomButtons[4].visibility}"
					Content="{Binding Path=BottomButtons[4].Title, FallbackValue='Button 4'}"
					Command="{Binding Path=BottomButtons[4].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[4].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton5" Grid.Column="0" Grid.Row="1" IsTabStop="True" TabIndex="15" Background="{StaticResource Button5Image}"
					Visibility ="{Binding Path=BottomButtons[5].visibility}"
					Content="{Binding Path=BottomButtons[5].Title, FallbackValue='Button 5'}"
					Command="{Binding Path=BottomButtons[5].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[5].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton6" Grid.Column="1" Grid.Row="1" IsTabStop="True" TabIndex="16" Background="{StaticResource Button6Image}"
					Visibility ="{Binding Path=BottomButtons[6].visibility}"
					Content="{Binding Path=BottomButtons[6].Title, FallbackValue='Button 6'}"
					Command="{Binding Path=BottomButtons[6].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[6].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton7" Grid.Column="2" Grid.Row="1" IsTabStop="True" TabIndex="17" Background="{StaticResource Button7Image}"
					Visibility ="{Binding Path=BottomButtons[7].visibility}"
					Content="{Binding Path=BottomButtons[7].Title, FallbackValue='Button 7'}"
					Command="{Binding Path=BottomButtons[7].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[7].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton8" Grid.Column="3" Grid.Row="1" IsTabStop="True" TabIndex="18" Background="{StaticResource Button8Image}"
					Visibility ="{Binding Path=BottomButtons[8].visibility}"
					Content="{Binding Path=BottomButtons[8].Title, FallbackValue='Button 8'}"
					Command="{Binding Path=BottomButtons[8].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[8].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton9" Grid.Column="4" Grid.Row="1" IsTabStop="True" TabIndex="19" Background="{StaticResource Button9Image}"
					Visibility ="{Binding Path=BottomButtons[9].visibility}"
					Content="{Binding Path=BottomButtons[9].Title, FallbackValue='Button 9'}"
					Command="{Binding Path=BottomButtons[9].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[9].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton10" Grid.Column="0" Grid.Row="2" IsTabStop="True" TabIndex="20" Background="{StaticResource Button10Image}"
					Visibility ="{Binding Path=BottomButtons[10].visibility}"
					Content="{Binding Path=BottomButtons[10].Title, FallbackValue='Button 10'}"
					Command="{Binding Path=BottomButtons[10].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[10].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton11" Grid.Column="1" Grid.Row="2" IsTabStop="True" TabIndex="21" Background="{StaticResource Button11Image}"
					Visibility ="{Binding Path=BottomButtons[11].visibility}"
					Content="{Binding Path=BottomButtons[11].Title, FallbackValue='Button 11'}"
					Command="{Binding Path=BottomButtons[11].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[11].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton12" Grid.Column="2" Grid.Row="2" IsTabStop="True" TabIndex="22" Background="{StaticResource Button12Image}"
					Visibility ="{Binding Path=BottomButtons[12].visibility}"
					Content="{Binding Path=BottomButtons[12].Title, FallbackValue='Button 12'}"
					Command="{Binding Path=BottomButtons[12].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[12].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton13" Grid.Column="3" Grid.Row="2" IsTabStop="True" TabIndex="23" Background="{StaticResource Button13Image}"
					Visibility ="{Binding Path=BottomButtons[13].visibility}"
					Content="{Binding Path=BottomButtons[13].Title, FallbackValue='Button 13'}"
					Command="{Binding Path=BottomButtons[13].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[13].isDefault, FallbackValue = false}"-->
				
			</Button>
			<Button Name="BottomButton14" Grid.Column="4" Grid.Row="2" IsTabStop="True" TabIndex="24" Background="{StaticResource Button14Image}"
					Visibility ="{Binding Path=BottomButtons[14].visibility}"
					Content="{Binding Path=BottomButtons[14].Title, FallbackValue='Button 14'}"
					Command="{Binding Path=BottomButtons[14].ClickCommand, Mode=OneTime}">
				<!--IsDefault="{Binding Path=BottomButtons[14].isDefault, FallbackValue = false}"-->
				
			</Button>
		</Grid>
	</Canvas>
</UserControl>
